  "shortcuts": [
    {
      "name": "Add Expense",
      "short_name": "Expense",
      "description": "Quickly add a new expense",
      "url": "/expenses.html?action=add",
      "icons": [{ "src": "/pwa/icons/expense-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View financial overview",
      "url": "/dashboard.html",
      "icons": [{ "src": "/pwa/icons/dashboard-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Add Income",
      "short_name": "Income",
      "description": "Record new income",
      "url": "/income.html",
      "icons": [{ "src": "/pwa/icons/income-96.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/pwa/screenshots/mobile-dashboard.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard on mobile"
    },
    {
      "src": "/pwa/screenshots/desktop-analytics.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Analytics on desktop"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+wealthflow",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/dashboard.html",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  }
}
